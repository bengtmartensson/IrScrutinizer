<?xml version="1.0" encoding="UTF-8"?>
<assembly xmlns="http://maven.apache.org/plugins/maven-assembly-plugin/assembly/1.1.2"
          xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
          xsi:schemaLocation="http://maven.apache.org/plugins/maven-assembly-plugin/assembly/1.1.2 http://maven.apache.org/xsd/assembly-1.1.2.xsd">
    <id>bin</id>
    <formats>
        <format>tar.gz</format>
        <!--format>tar.bz2</format>
        <format>zip</format-->
    </formats>
    <includeBaseDirectory>false</includeBaseDirectory>

    <fileSets>
        <fileSet>
            <outputDirectory/>
            <includes>
                <include>*.txt</include>
                <!--include>target/*.jar</include-->
            </includes>
            <lineEnding>keep</lineEnding>
        </fileSet>
        <fileSet>
            <directory>target</directory>
            <outputDirectory/>
            <includes>
                <include>*jar-with-dependencies.jar</include>
                <include>*.ini</include>
                <include>*.xml</include>
                <include>*.desktop</include>
                <include>*.sh</include>
                <include>*.bat</include>
            </includes>
        </fileSet>
        <fileSet>
            <directory>native</directory>
            <outputDirectory/>
            <includes>
                <include>*/*</include>
            </includes>
        </fileSet>
        <fileSet>
            <directory>src/main/doc</directory>
            <outputDirectory>doc</outputDirectory>
            <includes>
                <include>*</include>
            </includes>
        </fileSet>
        <fileSet>
            <directory>arduino/GirsLite</directory>
            <outputDirectory>arduino/GirsLite</outputDirectory>
            <includes>
                <include>*</include>
            </includes>
        </fileSet>
    </fileSets>
    <files>
        <file>
            <source>../Crystal-Clear-Icons/src/main/resources/icons/Crystal-Clear/64x64/apps/babelfish.png</source>
            <outputDirectory/>
        </file>
        <file>
            <source>../schemas/girr.xsd</source>
            <outputDirectory>schemas</outputDirectory>
        </file>
        <file>
            <source>target/generated-documents/IrScrutinizer.html</source>
            <outputDirectory>doc</outputDirectory>
        </file>
        <file>
            <source>../IrpMaster/target/generated-documents/IrpMaster.html</source>
            <outputDirectory>doc</outputDirectory>
        </file>
    </files>
</assembly>
